# =============================================================================
# Python Project Template 环境配置模板
# =============================================================================
# 复制此文件为 .env 并填入实际值
# 生成安全的随机密钥：
#   python -c "import os, secrets; print('PPT_ENCRYPTION__AES_KEY=' + os.urandom(32).hex())"
#   python -c "import secrets; print('PPT_API__SECRET_KEY=' + secrets.token_urlsafe(32))"
# =============================================================================

# 环境设置
PPT_ENV=dev
# 可选值：dev（开发）、test（测试）、prod（生产）

# =============================================================================
# 数据库配置
# =============================================================================
PPT_DATABASE__USERNAME=your_username
PPT_DATABASE__PASSWORD=your_secure_password_here
PPT_DATABASE__HOST=localhost
PPT_DATABASE__PORT=3306
PPT_DATABASE__DATABASE=your_database

# =============================================================================
# 安全令牌配置
# =============================================================================
PPT_SECURITY__TOKEN__SECRET_KEY=wzA-RZqiqRzuTaY6gAFDSthOAcMuEmulMsVr9_AloAl85vRt8mtYkiTE3L10rYn1givOnUyh8JlFna1OLmMvLg
# 用于JWT令牌签名，务必为 dev/test/prod 等每个环境生成不同的随机字符串
# 生成方式：python -c "import secrets; print(secrets.token_urlsafe(64))"
PPT_SECURITY__TOKEN__ALGORITHM=HS256
PPT_SECURITY__TOKEN__ACCESS_TOKEN_EXPIRE_MINUTES=180
PPT_SECURITY__TOKEN__REFRESH_TOKEN_EXPIRE_DAYS=7

# Token撤销配置
PPT_SECURITY__REVOCATION__BACKEND=memory
PPT_SECURITY__REVOCATION__REDIS__HOST=localhost
PPT_SECURITY__REVOCATION__REDIS__PORT=6379
PPT_SECURITY__REVOCATION__REDIS__DB=2
PPT_SECURITY__REVOCATION__REDIS__USERNAME=
PPT_SECURITY__REVOCATION__REDIS__PASSWORD=
PPT_SECURITY__REVOCATION__REDIS__SSL=false

# =============================================================================
# 加密配置
# =============================================================================
PPT_ENCRYPTION__AES_KEY=replace-with-64-char-hex-key
# AES加密密钥（256位），必须是64个十六进制字符（32字节）
# 生成方式：python -c "import os; print(os.urandom(32).hex())"
# ⚠️  警告：此密钥用于加密敏感数据，请妥善保管！

# =============================================================================
# 缓存配置（Redis）
# =============================================================================
PPT_CACHE__REDIS__HOST=localhost
PPT_CACHE__REDIS__PORT=6379
PPT_CACHE__REDIS__DB=0
PPT_CACHE__REDIS__PASSWORD=
PPT_CACHE__DEFAULT_TTL=3600
# TTL：缓存默认过期时间（秒）

# =============================================================================
# 日志配置
# =============================================================================
PPT_LOGGING__LEVEL=INFO
# 可选值：DEBUG、INFO、WARNING、ERROR、CRITICAL
# 开发环境建议使用DEBUG，生产环境建议使用INFO

# =============================================================================
# 任务调度配置
# =============================================================================
PPT_SCHEDULER__ENABLED=true
PPT_SCHEDULER__TIME_ZONE=Asia/Shanghai

# =============================================================================
# 监控配置
# =============================================================================
PPT_MONITORING__ENABLED=true
PPT_MONITORING__PORT=9966

# =============================================================================
# 开发/测试专用配置
# =============================================================================
# 是否启用调试模式
PPT_DEBUG=false
# 是否启用自动重载（开发环境）
PPT_AUTO_RELOAD=true
